@model List<Job>

<section class="job-filter">

    <h1 class="heading">
        filter jobs
    </h1>

    <form action="" method="post">
        <div class="flex">
            <div class="box">
                <p>job title <span>*</span></p>
                <input type="text" name="title" placeholder="keyword,category or company" required maxlength="20"
                    class="input">
            </div>
        </div>
        <div>
            <button type="submit" asp-controller="Jobs" asp-action="FilteredIndex" class="btn">Get Filtered Jobs</button>
        </div>
        </div>
    </form>
</section>


<!--job filter section ends-->

<!--jobs section starts-->
<section class="jobs-container">

    <h1 class="heading">all jobs</h1>
    <div class="box-container">

        @foreach (var item in Model)
        { //FOREACH olarak güncelenecek
            <div class="box">
                <div class="company">
                    <img src="images/1.jpg" alt="">
                    <div>
                        <h3>@item.CompanyName</h3>
                        <p>@item.DatePosted</p>
                    </div>
                </div>
                <h3 class="job-title">@item.JobTitle</h3>
                <p class="location"><i class="fas fa-map-marker-alt"></i>
                    <span>@item.Location</span>
                </p>
                <div class="tags">
                    <!--jobs salary and other details-->
                    <p><i class="fas fa-indian-rupee-sign"></i><span>@item.SalaryRange</span></p>
                    <p><i class="fas fa-clock"></i><span>@item.ShiftType</span></p>
                </div>
                <div class="flex-btn">
                    <a asp-controller="Jobs" asp-action="GetJob" asp-route-id="@item.JobId" class="btn">View Details</a>
                    <button type="submit" class="far fa-heart" name="save"></button>
                </div>
            </div>

        }

        <!--biraz dahah iş eklenebilir ama artık iş tanımlandıkça ekleme yapılacak-->


    </div>

</section>
